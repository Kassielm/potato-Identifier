# Configurações para Toradex Verdin iMX8MP com NPU
# Este arquivo contém configurações específicas para uso da NPU

# Configurações de TensorFlow Lite
export TF_CPP_MIN_LOG_LEVEL=2
export CORAL_ENABLE_EDGETPU=1

# Configurações para iMX8MP NPU
export NPU_AVAILABLE=1
export VIPNPU_DEVICE="/dev/vipnpu"

# Configurações de display para Weston
export WAYLAND_DISPLAY=wayland-0
export WESTON_DISABLE_ATOMIC=1
export XDG_RUNTIME_DIR=/tmp/1000-runtime-dir
export XDG_SESSION_TYPE=wayland

# Configurações de performance
export OMP_NUM_THREADS=4
export TF_NUM_INTEROP_THREADS=4
export TF_NUM_INTRAOP_THREADS=4

# Configurações de memória para GPU Vivante
export VIV_MGPU_KERNEL_CONFIG=1

# Configurações específicas do iMX8MP
export IMX_VPU_ENABLE_TILE_OPTIMIZE=1

# Bibliotecas EdgeTPU
export EDGETPU_VERBOSITY=0
export LIBEDGETPU_DEVICE_TYPE=VPU

# Debug (descomente para debug)
# export CORAL_DEBUG=1
# export TF_CPP_VMODULE=2
